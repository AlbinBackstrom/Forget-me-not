<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1"
    android:background="@drawable/myshape">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Ny Timer"
        android:textAppearance="@android:style/TextAppearance.Material.Title" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linMinuteAlarm">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="Antal minuter till alarm"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp">

            <TextView
                android:text=" minuter."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_weight="2"
                android:elevation="9dp"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

            <Button
                android:id="@+id/btnSaveTimer"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>